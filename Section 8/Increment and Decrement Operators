/* 
Increment Operator ++
Decrement Operator --

Change the value by 1

Prefix ++num
Postfix num++

Rule1: Dont overuse
Rule2: Dont use it 2x for the same variable in the same statement
*/

#include <iostream>

using namespace std;

int main() {
    
    int counter {10};
    int result {0};
    
    // Example 1 - simple increment
    cout << "Counter: " << counter << endl;
    
    counter = counter + 1;
    cout << "Counter: " << counter << endl;
    
    counter++;
    cout << "Counter: " << counter << endl;
    
    ++counter;
    cout << "Counter: " << counter << endl;
    
    cout << "=================================================" << endl;
    
    // Example 2 - preincrement
    counter = 10;
    result = 0;
    
    cout << "Counter: " << counter << endl;
    result = ++counter; // increment is applied to counter first before its used
    cout << "Counter: " << counter << endl;
    cout << "Result: " << result << endl;
    
    cout << "=================================================" << endl;
    
    // Example 3 - post increment
    counter = 10;
    result = 0; 
    
    cout << "Counter: " << counter << endl;
    result = counter++; // increment is applied to counter after its used
    cout << "Counter: " << counter << endl;
    cout << "Result: " << result << endl;
    
    cout << "=================================================" << endl;
    
    // Example 4
    counter = 10;
    result = 0;
    
    cout << "Counter: " << counter << endl;
    
    result = ++counter + 10;
    cout << "Counter: " << counter << endl;
    cout << "Result: " << result << endl;
    
    cout << "=================================================" << endl;
    
    // Example 5
    counter = 10;
    result = 0;
    
    cout << "Counter: " << counter << endl;
    
    result = counter++ + 10;
    cout << "Counter: " << counter << endl;
    cout << "Result: " << result << endl;
    
    return 0;
    
}
