#include <iostream>

using namespace std;

int main() {
    // Character data type
    char middle_initial {'J'}; // Single quotes represet single character
    cout << "My middle initial is " << middle_initial << endl;
    
    
    // Integer Types
    unsigned short int exam_score{55}; // Have to mention unsigned if you want it to be
    cout << "My exam score was: " << exam_score << endl;
    
    int coutries_represented {65}; // Dont have to mention anything for signed
    cout << "There were " << coutries_represented << " countries represent in my meeting" << endl;
    
    long people_in_florida {20610000};
    cout << "There are about " << people_in_florida << " people in Florida" << endl;
    
    // long people_on_earth {7'600'000'000}; will have error
    long long people_on_earth {7'600'000'000}; // ' is okay to be added to numbers for easier readability
    cout << "There are about " << people_on_earth << " people on earth" << endl;
    
    long long distance_to_alpha_centauri {9'461'000'000'000};
    cout << "The distance to alpha centauri is " << distance_to_alpha_centauri << " kilometers" << endl;
    
    // Floating point types
    float car_payment {401.23};
    cout << "My car payment is " << car_payment << endl;
    
    double pi {3.14159};
    cout << "PI is " << pi << endl;
    
    long double large_amount {2.7e120}; // store very large number or very small with long double
    cout << large_amount << " is a very big number" << endl;
    
    // Boolean type
    bool game_over {false};
    cout << "The value of Game Over is " << game_over << endl;
    
    // Overflow example
    short value1 {30000};
    short value2 {1000};
    short product {value1 * value2};
    cout << "The sum of " << value1 << " and " << value2 << " is " << product << endl; // return a random number due to the output not matching to the short 
    
    return 0;
}
