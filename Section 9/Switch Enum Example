#include <iostream>

using namespace std;

int main() {
    
    enum Direction {
      left, right, up, down  
    }; // creating a new type
    
    Direction heading {left};
    
    switch (heading) {
        case left:
            cout << "Going left" << endl;
            break;
        case right:
            cout << "Going right" << endl;
            break;
        default:
            cout << "OK" << endl;
    }
    
    return 0;
    
}
